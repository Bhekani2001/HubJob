<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job_hub_logo"
    tools:context=".PostJobActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/jobPostCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/postHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post a Job"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:gravity="center"
                    android:paddingBottom="16dp"/>

                <EditText
                    android:id="@+id/jobTitleField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Title"
                    android:inputType="textCapWords"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/descriptionField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Description"
                    android:minLines="3"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/locationField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City/Suburb"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/salaryField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Salary"
                    android:inputType="numberDecimal"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/experienceField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Experience Required"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/skillsField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Skills Required"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/categoryField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Category"
                    android:backgroundTint="@color/sky_blue"
                    android:padding="12dp"
                    android:textColorHint="@color/grey"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/postButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Job"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
