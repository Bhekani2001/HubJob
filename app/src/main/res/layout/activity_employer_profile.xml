<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job_hub_logo"
    tools:context=".EmployerProfileActivity">


    <androidx.cardview.widget.CardView
    android:id="@+id/companyProfileCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/companyProfileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/companyNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/industryField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/contactPersonField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Person"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/phoneField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:enabled="false"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/addressField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/cityField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/suburbField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Suburb"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/postalCodeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Code"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
