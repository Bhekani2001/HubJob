<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myJobAlertLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/job_hub_logo"
    tools:context=".MyJobAlertActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/jobPrefCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card Header -->
            <TextView
                android:id="@+id/jobPrefHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Preferences"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:gravity="center"
                android:paddingBottom="16dp"/>

            <!-- Job Title -->
            <EditText
                android:id="@+id/editTextJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Job Title"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:backgroundTint="@color/sky_blue"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:layout_marginBottom="12dp"/>

            <!-- Skills -->
            <EditText
                android:id="@+id/editTextSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skills (comma-separated)"
                android:inputType="text"
                android:padding="12dp"
                android:backgroundTint="@color/sky_blue"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:layout_marginBottom="12dp"/>

            <!-- Location -->
            <EditText
                android:id="@+id/editTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:backgroundTint="@color/sky_blue"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:layout_marginBottom="16dp"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Preferences"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
