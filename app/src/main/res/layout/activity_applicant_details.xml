<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView style="@style/TextLabel" android:text="Full Name" />
        <TextView android:id="@+id/tv_full_name" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Email" />
        <TextView android:id="@+id/tv_email" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Gender" />
        <TextView android:id="@+id/tv_gender" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Race" />
        <TextView android:id="@+id/tv_race" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Highest Education" />
        <TextView android:id="@+id/tv_education" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Skills" />
        <TextView android:id="@+id/tv_skills" style="@style/TextValue" />

        <TextView
            style="@style/TextLabel"
            android:text="City" />
        <TextView android:id="@+id/tv_city" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Postal Code" />
        <TextView android:id="@+id/tv_postal" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Job Title" />
        <TextView android:id="@+id/tv_job_title" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Description" />
        <TextView android:id="@+id/tv_description" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Location" />
        <TextView android:id="@+id/tv_location" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Salary" />
        <TextView android:id="@+id/tv_salary" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Experience Required" />
        <TextView android:id="@+id/tv_experience" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Category" />
        <TextView android:id="@+id/tv_category" style="@style/TextValue" />

        <TextView style="@style/TextLabel" android:text="Posted By" />
        <TextView android:id="@+id/tv_posted_by" style="@style/TextValue" />

    </LinearLayout>
</ScrollView>
